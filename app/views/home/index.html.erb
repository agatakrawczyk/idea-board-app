<div class="jumbotron">
  <div class="container">
    <h1 class="display-3">IDEA BOARD</h1>
    <div class="card text-white bg-dark mb-3" style="max-width: 30rem;">
      <div class="card-header"><%= link_to "Add a new idea", new_note_path %></div>
    </div>
    <div class="card text-white bg-dark mb-3" style="max-width: 30rem;">
      <div class="card-header"><%= link_to "Show all ideas", notes_path %></div>
    </div>
    <div class="card text-white bg-dark mb-3" style="max-width: 30rem;">
      <div class="card-header"><%= link_to "Add a new event to the calendar", new_meeting_path %></div>
    </div>
    <div class="card text-white bg-dark mb-3" style="max-width: 30rem;">
      <div class="card-header"><%= link_to "Shaw all events", meetings_path %></div>
    </div>
  </div>

<%= month_calendar events: @meetings do |date, meetings| %>
    <%= date.day %>
  <% meetings.each do |meeting| %>
    <div>
      <%= link_to meeting.name, meeting_path(meeting.id) %>
    </div>
  <% end %>
<% end %>

</div>
