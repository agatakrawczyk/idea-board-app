

<div class="jumbotron">
  <div class="container">
    <h2 class="display-2"> All notes </h2>

    <%= form_tag "", method: "get" do %>
      <p><%= text_field_tag("q", @q) %></p>
      <p><%= submit_tag("Search") %></p>
    <% end %>

    <%= link_to "Back", home_path %><br>
  </div>

</div>
    <% @notes.each do |note| %>
        <div class="card-deck">
          <div class="card" id="note">
            <div class="card-body">
              <%= link_to " ", note_path(note.id), class: "card-link" %>

              <% if note.image.file? %>
                <%= image_tag note.image.url(:thumb) %>
              <% end %>

              <h4 class="card-title"><%= note.title %></h4>
              <p class="card-text"> <%= note.body %></p>
              <p class="card-text"><small class="text-muted"> <%= time_ago_in_words(note.updated_at) %></small></p>
            </div>
          </div>
        </div>
    <% end %>
  </div>
</div>



